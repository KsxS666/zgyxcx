.ripple{
  position: relative;
  overflow: hidden;
}
.ripple:after {
  content: "";
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
  background-image: radial-gradient(circle, #333 10%, transparent 10.01%);
  background-repeat: no-repeat;
  background-position: 100%;
  transform: scale(20, 20);
  opacity: 0;
  transition: transform 1.5s, opacity 1s;
}

.ripple:active:after {
  transform: scale(0, 0);
  opacity: .3;
  transition: 0s;
}