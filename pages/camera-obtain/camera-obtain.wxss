/* pages/camera-obtain/camera-obtain.wxss */
@import "../../common/common.wxss";
page{
  padding: 44rpx 69rpx;
  width: auto;
  font-weight: 400;
}
.camera-wrp{
  width: 613rpx;
  height: 372rpx;
  background: #f5f5f5;
  border: 2px solid #cecece;
  align-items: center;
  justify-content: center;
}
.camera-wrp image{
  width: 100%;
  height: 100%
}
.camera-wrp image.camera-icon{
  width: 91rpx;
  height: 74rpx;
}
.btn-area{
  justify-content: space-between;
  margin-top: 61rpx;
}
.btn-area view{
  width: 272rpx;
  height: 87rpx;
  outline: none;
  font-size: 40rpx;
  border-radius: 8rpx;
  border: 2px solid #24c7ae;
  text-align: center;
  line-height: 87rpx;
}
.btn-area .cancel{
  color: #24c7ae;
  background: #ffffff;
}
.btn-area .chooseImage{
  color: #ffffff
}
.go-upload{
    width: 272rpx;
    height: 87rpx;
    outline: none;
    font-size: 40rpx;
    border-radius: 8rpx;
    border: 2px solid #24c7ae;
    text-align: center;
    line-height: 87rpx;
    background: #ffffff; 
    color: #24c7ae;
    margin: 61rpx auto;
}