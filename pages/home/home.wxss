/* pages/home/home.wxss */
@import "../../common/common.wxss";
.all{
  color: #333333;
  height: 100%;
  font-weight: bold;
  background: #f5f5f5;
  display: flex;
  flex-flow: column;
  overflow: hidden;
  min-height: 100vh
}
.mgr47{
  margin-right: 47rpx;
}
.userinfo-avatar{
  overflow:hidden;  
  display: block;  
  width: 70rpx;  
  height: 70rpx;  
  border-radius: 50%;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2); 
}
.commu-addr{
  align-items: center;
  padding: 0 20rpx 0 25rpx;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.commu-addr image{
  width: 31rpx;
  height: 41rpx;
}
.user-info{
  height: 8%;
  border-bottom: 1px solid #e5e5e5;
  padding: 0 32rpx;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  margin-bottom: 21rpx;
}
.head-name{
  align-items: center;
}
.mgr{
  margin-right: 25rpx;
}
.headImg{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.community-name{
  align-items: center;
}
.community-name image{
  width: 31rpx;
  height: 41rpx;
}
.head-title{
  height: 58rpx;
  width: 163rpx;
  color: #ffffff;
  line-height: 58rpx;
  border-radius: 0 30rpx 30rpx 0;
  text-align: center;
  margin-bottom: 28rpx;
}
.area-manager-content{
  flex-flow: column;
  align-items: center;
  height: 18%
}
.area-manager-item{
  margin-bottom: 31rpx;
}
.grid{
  flex-flow: column;
  margin: 0 30rpx;
  background: #ffffff;
  border-radius: 8rpx;
  flex: 1;
  box-shadow: 0 8px 15px rgba(23, 134, 125, 0.25);
  margin-bottom: 30rpx;

}
.grid-column-item{
  flex: 1
}
.grid-row-item{
  flex: 1;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  border: 1px solid #e5e5e5;
}
.grid-row-item image{
  width: 146rpx;
  height: 146rpx;
  margin-bottom: 27rpx
}
.grid-row-item text{
  font-size: 36rpx;
}
swiper.banner-swiper{
  height: 300rpx;
  margin: 0 30rpx;
}
swiper.banner-swiper swiper-item{
  border-radius: 8rpx;
}
swiper.house-swiper{
  align-items: center
}
.house-swiper{
  margin: 21rpx 30rpx;
  height: 82rpx;
  align-items: center;
  padding: 0 20rpx
}
.house-swiper swiper{
  flex: 0 0 60%;
  height: 100%
}
.house-swiper swiper swiper-item{
  display: flex;
  align-items: center;
  color: #666666;
  font-size: 30rpx;
  justify-content: flex-end
}
.manage-title{
  font-size: 40rpx;
  color: #24c7ae;
  flex: 1
}
.grid-row-item.card1{border-left: 0;border-top: 0;border-right: 0 }
.grid-row-item.card2{border-right: 0;border-top: 0}
.grid-row-item.card3{border: 0}
.grid-row-item.card4{border-right: 0;border-top: 0;border-bottom: 0}



