/* pages/insert-record/insert-record.wxss */
@import "../../common/common.wxss";
page{
  font-weight: bold;
  padding: 30rpx;
  width: auto;
  background: #f5f5f5;
  font-size: 30rpx;
}
.b-size{
  font-size: 40rpx;
}
.card{
  background: #ffffff;
  border-radius: 10rpx;
  padding: 0 30rpx;
  position: relative;
  box-shadow: 0 2px 6px rgba(11, 146, 125, 0.25);
  
}
.gap1{
  position: absolute;
  width: 20px;
  height: 20px;
  border-radius: 20px;
  background-color: #f5f5f5;
  left: -20rpx;
  top:82rpx;

}
.gap2{
  position: absolute;
  width: 20px;
  height: 20px;
  border-radius: 20px;
  background-color: #f5f5f5;
  right: -20rpx;
  top:82rpx;
}
.today-insert{
  margin-bottom: 34rpx
}
.history-insert{
  margin-bottom: 20rpx;
}
.card-info{
  align-items: center;
  justify-content: space-between;
  height: 104rpx;
}
.card-info:not(:last-child){
  border-bottom: 1px solid #e5e5e5
}
.history-title{
  margin-bottom: 34rpx;
}